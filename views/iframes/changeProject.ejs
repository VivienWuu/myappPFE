<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>添加成员表单</title>
    <link rel="stylesheet" href="/layui_dist/css/layui.css">
</head>
<body>
  <form class="layui-form" action="">
    <div class="layui-form-item" >
      <div class="layui-inline">
        <label class="layui-form-label">项目名称</label>
        <div class="layui-input-inline">
          <input type="text" name="nameOfProject" id="nameOfProject" placeholder="请输入, 必须要填" lay-verify="required|text" lay-reqtext="项目名称是必填项，岂能为空？" autocomplete="off" class="layui-input" style="width: 200px">
        </div>
      </div>
    </div>
    <div class="layui-form-item">
      <div class="layui-inline">
        <label class="layui-form-label">AV计划工时</label>
        <div class="layui-input-inline"  style="width: 38px">
          <input type="number" name="hourAV" id="hourAV" placeholder=0 autocomplete="off" class="layui-input" style="width: 50px">
        </div>
        <label class="layui-form-label">CB/ME计划工时</label>
        <div class="layui-input-inline"  style="width: 38px">
          <input type="number" name="hourCBME" id="hourCBME" placeholder=0  autocomplete="off" class="layui-input" style="width: 50px">
        </div>
        <label class="layui-form-label">CL/STR计划工时</label>
        <div class="layui-input-inline"  style="width: 38px"> 
          <input type="number" name="hourCLSTR" id="hourCLSTR" placeholder=0 autocomplete="off" class="layui-input" style="width: 50px">
        </div>
      </div>
    </div>
    <div class="layui-form-item">
      <div class="layui-inline">
        <label class="layui-form-label">开始日期</label>
        <div class="layui-input-inline">
          <input type="text" name="startdateOfProject" id="startdate" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
        </div>
      </div>
      <div class="layui-inline">
        <label class="layui-form-label">结束日期</label>
        <div class="layui-input-inline">
          <input type="text" name="enddateOfProject" id="enddate" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
        </div>
      </div> 
    </div>
    <div class="layui-form-item">
      <div class="layui-input-block">
        <button class="layui-btn" lay-submit="submit" lay-filter="changeform">提交</button>
        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
      </div>
    </div>
  </form>
<script src="/layui_dist/layui.js"></script>
<script>
layui.use(['form','laydate'],function(){
  var form = layui.form;
  var laydate = layui.laydate;
  $ = layui.$;
  var openedProject = layui.data('openedProject');
  $("#nameOfProject")[0].placeholder = openedProject.nameOfProject;
  $('#hourAV')[0].placeholder = openedProject.hourAV;
  $('#hourCBME')[0].placeholder = openedProject.hourCBME;
  $('#hourCLSTR')[0].placeholder = openedProject.hourCLSTR;
  $('#startdate')[0].placeholder = openedProject.startdateOfProject;
  $('#enddate')[0].placeholder = openedProject.enddateOfProject;
  form.on('submit(changeform)',function(data){
    data.field['_id'] = openedProject._id;
    console.log(data.field);
    $.ajax({
      type: "get",
      url: "/project/changeProjectValue",
      data: data.field,
      dataType: "json",
      success: function (res) {
        layui.data('res',{key:"SUCCESS",value:res.SUCCESS});
        var thisIframe = parent.layer.getFrameIndex(window.name);
        parent.layui.layer.close(thisIframe);
      }
    });
  });
  laydate.render({
    elem:"#startdate"
  });
  laydate.render({
    elem:"#enddate"
  })
})
</script>
</body>
</html>