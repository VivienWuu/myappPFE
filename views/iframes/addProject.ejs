<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/layui_dist/css/layui.css">
</head>
<body>
<form class="layui-form" action="">
  <div class="layui-form-item" >
    <div class="layui-inline">
      <label class="layui-form-label">项目名称</label>
      <div class="layui-input-inline">
        <input type="text" name="nameOfProject" placeholder="请出入项目名称" lay-verify="required|text" lay-reqtext="请出入项目名称" autocomplete="off" class="layui-input" style="width: 200px">
      </div>
    </div>
  </div>
  <div class="layui-form-item">
    <div class="layui-inline">
      <label class="layui-form-label">开始日期</label>
      <div class="layui-input-inline">
        <input type="text" name="startdateOfProject" id="startdate" placeholder="YYYY-M-D" autocomplete="off" class="layui-input">
      </div>
    </div>
    <div class="layui-inline">
      <label class="layui-form-label">结束日期</label>
      <div class="layui-input-inline">
        <input type="text" name="enddateOfProject" lay-verify="compareDate" id="enddate" placeholder="YYYY-M-D" autocomplete="off" class="layui-input">
      </div>
    </div> 
  </div>
  <div class="layui-form-item">
    <div class="layui-input-block">
      <button class="layui-btn" lay-submit="submit" lay-filter="addform">提交</button>
      <button type="reset" class="layui-btn layui-btn-primary">重置</button>
    </div>
  </div>
</form>
<script src="/layui_dist/layui.js"></script>
<script src="/moment/moment.js"></script>
<script>
layui.use(['form','laydate'],function(){
  var form = layui.form;
  var laydate = layui.laydate;
  var $ = layui.$;
  laydate.render({
    elem:"#startdate"
  });
  laydate.render({
    elem:"#enddate"
  });
  form.verify({
    compareDate: function (value,item) {
      var startdate = $("#startdate").val();
      if (moment(value)-moment(startdate)<0) {
        return ' 结束日期必须大于开始日期';
      }
    }
  })
  form.on('submit(addform)',function(data){
    var dataFromForm = data.field;
    $.ajax({
      url:'/project/addOneProject',
      type:'get',
      data:dataFromForm,
      dataType:'json',
      success:function(data){
        var thisIframe = parent.layer.getFrameIndex(window.name);
        if(data.SUCCESS == 1) {
          layui.data('res',{key:"SUCCESS",value:data.SUCCESS});
          parent.layui.layer.close(thisIframe);
        }else{
          parent.layui.layer.close(thisIframe);
        } 
      }
    })
  });
});
layui.use('element', function(){
  var element = layui.element;
});
</script>
</body>
</html>
